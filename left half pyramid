#include <stdio.h>

int main() {
    int rows = 5; // You can change the number of rows as needed

    for (int i = 0; i < rows; i++) {
        // Print spaces before the stars
        for (int j = 0; j < 2 * (rows - i) - 1; j++) {
            printf(" ");
        }

        // Print the stars
        for (int k = 0; k <= i; k++) {
            printf("* ");
        }

        printf("\n");
    }

    return 0;
}
