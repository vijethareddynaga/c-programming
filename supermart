#include<stdio.h>
void main()
{
int mango,grapes,promogranete,n1=2,n2=3,n3=1,total,balance_amount,mangoprice=200,grapeprice=400,promograneteprice=350;
clrscr();
printf("\tvenu super market\n");
printf("-------------------\n");
mango=mangoprice*n1;
grapes=grapeprice*n2;
promogranete=promograneteprice*n3;
printf("the cost of mangoes    =%d\n",mango);
printf("the cost of grapes     =%d\n",grapes);
printf("the cost of pomogranet =%d\n",promogranete);
printf("------------------\n");
total=mango+grapes+promogranete;
printf("------------------\n");
printf("the total cost    =%d\n",total);
balance_amount=2000-total;
printf("the balance amount=%d\n",balance_amount);
